{
    "compilerOptions": {
      "lib": ["ES2020"], 
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "moduleResolution": "node", 
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": ".",
      "removeComments": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true, 
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "paths": {
        "*": ["node_modules/*"],
        "@routes/*": ["src/routes/*"],
        "@controllers/*": ["src/controllers/*"],
        "@utils/*": ["src/utils/*"],
        "@schemas/*": ["src/schemas/*"],
        "@middleware/*": ["src/middleware/*"],
        "@database/*": ["src/database/*"],
        "@utils": ["src/utils"]
      }
    },
    "include": [
      "src/index.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/**/*",
      ".vscode/**/*"
    ],
    "types": ["node"],
    "ts-node": {
      "require": ["tsconfig-paths/register"] 
    }
  }